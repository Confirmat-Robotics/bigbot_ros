<?xml version="1.0" ?>
<robot name="wielproto" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:macro name="bigbot_wheel" params="wheel_linkname">
  	<link name="${wheel_linkname}_UCS1">
		<inertial>
			<mass value="2e-06" />
			<inertia ixx="1.1e-09" ixy="0" ixz="0" iyy="1.1e-09" iyz="0" izz="1.1e-09" />
		</inertial>
	</link>

    <link name="${wheel_linkname}_Base">
        <visual>
            <origin xyz="0.00000 0.00000 0.00000" rpy="0 0 0" />
            <geometry>
	            <mesh filename="package://bigbot_description/models/bigbot/meshes/wiel_reduced_urdf.dae" scale="0.0100 0.0100 0.0100" />
	        </geometry>
        </visual>
        <inertial>
	        <origin xyz="0.00015 -0.00000 0.00000" />
	        <mass value="3.0" />
	        <inertia ixx="0.0828816408495233" ixy="1.06830005976514E-07" ixz="1.94682741620837E-06" iyy="0.0479112131048851" iyz="-9.01831915318246E-08" izz="0.0479112510932343" />
        </inertial>
        <collision>
            <origin xyz="0.02 0.00 0.00000" rpy="0 1.57 0" />
            <geometry>
              <cylinder radius="0.16" length="0.135"/>
                 <!-- <radius>0.17</radius>
                  <length>0.10</length> 
                </cylinder> -->
            </geometry>
        </collision>
    </link>
    
   <gazebo reference="${wheel_linkname}_Base">
      <mu1 value="1.0"/>
      <mu2 value="0.5"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <fdir1 value="1 0 0"/>
    </gazebo>
    
   	<joint name="${wheel_linkname}_UCS1_to_${wheel_linkname}_Base" type="fixed">
		<parent link="${wheel_linkname}_UCS1" />
		<child link="${wheel_linkname}_Base" />
		<origin xyz="-0.00048 0.00039 0.07671" rpy="-0.0 1.5707963057214722 0.0" />
	</joint>
  </xacro:macro>
</robot>
